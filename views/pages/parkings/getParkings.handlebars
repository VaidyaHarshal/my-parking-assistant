<div class="container">
  <a href="parkings/create" id="createParkings" class="">Create a new parking</a>
  <div class="row">
    {{#each parkdata}}
      <div class="col-sm-4">
        <div class="card">
          <img src={{parkingImg}} class="card-img-top" alt="Parking Image" />
          <div class="card-body">
            <h5 class="card-title">{{address}}</h5>
            <p class="card-text">{{zip}}</p>
            <a
              href="parkings/edit/{{_id}}"
              id="editParkings"
              class="btn btn-primary"
            >Edit</a>
            <a
              onclick="return confirm('Are you sure?')"
              href="parkings/delete/{{_id}}"
              id="getParkingsDelete"
              class="btn btn-danger"
            >Delete</a>

            <input
              type="hidden"
              id="parkingID"
              name="parkingID"
              value={{_id}}
            />
          </div>
        </div>
      </div>
    {{else}}
      <div class="container alert alert-warning"><p class="empty">No content</p></div>
    {{/each}}
    {{#if success}}
      {{{successmsg}}}
    {{/if}}
  </div>
</div>