<div class="container">
    <form action="/listings/updateListingData/{{id}}", method="post" id="listBooking">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="startDate">Start date</label>
                <input
                type="text"
                class="form-control"
                id="startDate"
                name="startDate"
                value="{{data.startDate}}"
                />
                <label for="endDate">End date</label>
                <input
                type="text"
                class="form-control"
                id="endDate"
                name="endDate"
                value="{{data.endDate}}"
                />
            </div>
            <div class="form-group col-md-6">
                <label for="startTime">Start time</label>
                <input
                type="text"
                class="form-control"
                id="startTime"
                name="startTime"
                value="{{data.startTime}}"
                />
                <label for="endTime">End time</label>
                <input
                type="text"
                class="form-control"
                id="endTime"
                name="endTime"
                value="{{data.endTime}}"
                />
            </div>
            <div class="form-group col-md-6">
                <label for="price">Price</label>
                <input
                type="text"
                class="form-control"
                id="price"
                name="price"
                value="{{data.price}}"
                />
            </div>
        </div>
        <input type="submit" value="Update">
    </form>
</div>