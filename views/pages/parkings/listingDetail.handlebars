<div class="container">
  <form
    action="/listings/bookListing/{{data._id}}"
    method="post"
    id="listBooking"
    enctype="multipart/form-data"
  >
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="startDate">Start date</label>
        <input
          type="text"
          class="form-control"
          id="startDate"
          name="startDate"
          value="{{data.startDate}}"
          readonly
        />
        <label for="endDate">End date</label>
        <input
          type="text"
          class="form-control"
          id="endDate"
          name="endDate"
          value="{{data.endDate}}"
          readonly
        />
      </div>
      <div class="form-group col-md-6">
        <label for="startTime">Start time</label>
        <input
          type="text"
          class="form-control"
          id="startTime"
          name="startTime"
          value="{{data.startTime}}"
          readonly
        />
        <label for="endTime">End time</label>
        <input
          type="text"
          class="form-control"
          id="endTime"
          name="endTime"
          value="{{data.endTime}}"
          readonly
        />
      </div>
      <div class="form-group col-md-6">
        <label for="price">Price</label>
        <input
          type="text"
          class="form-control"
          id="price"
          name="price"
          value="{{data.price}}"
          readonly
        />
      </div>
      <div class="form-group col-md-6">
        <label for="price">Number plate</label>
        <input
          type="text"
          class="form-control"
          id="price"
          name="price"
          value="{{data.numberPlate}}"
        />
      </div>
    </div>
    <input type="submit" value="Book" />
  </form>
</div>