<a href="/parkings" id="viewParkings" class="">View my parkings</a>
{{#if error}}
  <div class="container">
    <div class="alert alert-danger" role="alert">
      {{errormsg}}
    </div>
  </div>
{{else}}
  <div class="container">
    <form
      method="POST"
      id="editParkingForm"
      action="/parkings/update/"
      enctype="multipart/form-data"
    >
      <div class="form-row row row-cols-auto">
        <div class="form-group col-4">
          <div class="card">
            <img
              src="/{{data.parkingImg}}"
              class="card-img-top"
              alt="Parking Image"
            />
          </div>
        </div>
        <div class="form-group col-4 align-self-start">
          <div class="form-group col align-self-start">
            <label class="" for="parkingImg">Upload Image</label>
            <input
              type="file"
              class="form-control"
              id="parkingImg"
              name="parkingImg"
            />
          </div>
          <div class="form-group col align-self-start">

            <label for="longitude">Longitude</label>
            <input
              type="text"
              class="form-control"
              id="longitude"
              name="longitude"
              placeholder="Longitude"
              value="{{data.longitude}}"
            />
          </div>
          <div class="form-group col align-self-start">
            <label for="latitude">Latitude</label>
            <input
              type="text"
              class="form-control"
              id="latitude"
              name="latitude"
              placeholder="Latitude"
              value="{{data.latitude}}"
            />
          </div>
          <div class="form-group col align-self-start">
            <label for="parkingType">Parking Type</label>
            <select id="parkingType" name="parkingType" class="form-control">
              {{{parkingtype}}}
            </select>
          </div>
          <div class="form-group col align-self-end">
            <button
              type="submit"
              id="btnEditParking"
              class="btn btn-primary"
            >Update</button>
          </div>
        </div>
        <div class="form-group col align-self-start">
          <div class="form-group col align-self-start">
            <label for="address">Address</label>
            <input
              type="text"
              class="form-control"
              id="address"
              name="address"
              placeholder="1234 Main St"
              value="{{data.address}}"
            />
          </div>
          <div class="form-group col align-self-start">
            <label for="city">City</label>
            <input
              type="text"
              class="form-control"
              id="city"
              name="city"
              value="{{data.city}}"
            />
          </div>
          <div class="form-group col align-self-start">
            <label for="state">State</label>
            <select id="state" name="state" class="form-control">
              {{{states}}}
            </select>
          </div>
          <div class="form-group col align-self-start">
            <label for="zip">Zip</label>
            <input
              type="text"
              class="form-control"
              id="zip"
              name="zip"
              value="{{data.zip}}"
            />
          </div>
          <div class="form-group col align-self-start">
            <label for="category">Vehicle Category</label>
            <select
              id="category"
              name="category"
              class="form-control"
              multiple
              size="2"
              aria-label="multiple vehicle type"
            >

              {{{vehicleType}}}
            </select>
          </div>
        </div>
      </div>
      {{! <input name="_method" value="PUT" hidden /> }}
      <input name="parkingImghidden" value="{{data.parkingImg}}" hidden />
      <input name="parkingId" value="{{data._id}}" hidden />
      <input name="listerId" value="{{data.listerId}}" hidden />

    </form>
    {{#if success}}
      <div class="alert alert-success" role="alert">
        Parking successfully updated!
      </div>
    {{/if}}
  </div>

{{/if}}